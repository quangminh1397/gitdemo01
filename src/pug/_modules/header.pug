mixin navigation(arrs)
  ul
    each link in arrs
      li
        if link.target
          a(href=link.url, target=link.target) !{link.name}
        else
          a(href=link.url) !{link.name}

header.m-header
  .m-header__top
    .m-header__top-inner
      nav.m-header__top-menu
        +navigation(globalCainzMenus)

  .m-header__bottom
    .m-header__bottom-inner
      if pageID === 'homepage'
        h1.m-header__logo
          a(href="/")
            img(src=path+"/assets/images/common/logo_header.svg", alt="CAINZ")
      else
        .m-header__logo
          a(href="/")
            img(src=path+"/assets/images/common/logo_header.svg", alt="CAINZ")
      nav.m-header__bottom-menu
        ul
          li
            a(href=companyLink) 企業情報
            .m-header__subMenu
              .m-header__boxMenu
                .m-header__thumbMenu
                  .m-header__thumbMenu-img
                    img(src="https://dummyimage.com/526x278", alt="企業情報")
                  .m-header__thumbMenu-japanese 企業情報
                  .m-header__thumbMenu-english COMPANY INFO
                .m-header__navMenu
                  +navigation(companyMenus)
                .m-header__btnLink
                  a(href=companyLink, class="m-header__btnLink-text") 企業情報トップ
          li
            a(href=newsLink) ニュースリリース
          li
            a(href=contentsLink) コンテンツ
          li
            a(href=aboutusLink) カインズについて
            .m-header__subMenu
              .m-header__boxMenu
                .m-header__thumbMenu
                  .m-header__thumbMenu-img
                    img(src="https://dummyimage.com/526x278", alt="カインズについて")
                  .m-header__thumbMenu-japanese カインズについて
                  .m-header__thumbMenu-english ABOUT CAINZ
                .m-header__navMenu
                  +navigation(aboutCainzMenus)
          li
            a(href=partnersLink) ビジネスパートナー募集
            .m-header__subMenu
              .m-header__boxMenu
                .m-header__thumbMenu
                  .m-header__thumbMenu-img
                    img(src="https://dummyimage.com/526x278", alt="ビジネスパートナー募集")
                  .m-header__thumbMenu-japanese ビジネスパートナー募集
                  .m-header__thumbMenu-english Looking for business
                .m-header__navMenu
                  +navigation(businessMenus)
          li
            a(href='https://recruit.cainz.com/', target="_blank") 採用情報
          li
            a(href='https://translate.google.com/translate?hl=&sl=ja&tl=en&u=https://www.cainz.co.jp/', target="_blank") EN

      .m-menuToggle
        .m-menuToggle__hamburger
          input(type="checkbox" class="m-menuToggle__hamburger-button js-humburger-btn")
          .m-menuToggle__hamburger-line
            span 1
            span 2
            span 3
        .m-menuToggle__content.js-menu-content
          nav.m-menuToggle__content-item
            h2.m-menuToggle__content-item--title 最新情報
            ul.m-menuToggle__content-item--list
              li
                a(href=newsLink) ニュースリリース
              li
                a(href=contentsLink) コンテンツ

          nav.m-menuToggle__content-item
            h2.m-menuToggle__content-item--title 総合情報
            ul.m-menuToggle__content-item--list
              li
                .m-menuToggle__according
                  input(type="checkbox")
                  a(href=companyLink, class="m-menuToggle__according-text") 企業情報
                  .m-menuToggle__according-content
                    +navigation(companyMenus)
                    .m-header__btnLink
                      a(href=companyLink, class="m-header__btnLink-text") 企業情報トップ
                  .m-menuToggle__according-icon
              li
                .m-menuToggle__according
                  input(type="checkbox")
                  a(href=aboutusLink, class="m-menuToggle__according-text") カインズについて
